# Server Configuration
APP_HOST=0.0.0.0            # Host IP address
APP_PORT=8080               # Server port

# Logging Configuration
RUST_LOG=debug              # Logging level (e.g., error, warn, info, debug, trace)
RUST_BACKTRACE=1            # Enable backtrace: 0 (off), 1 (minimal), full (detailed)

# Database Configuration
DB_NAME=actixdb             # The name of the database (default: actixdb_local for development)
DB_USER=dev_user            # Username for the database
DB_PASS=dev_password123     # Password for the database user (use a secure password)

# Database Host and Port
DB_HOST=actix-db            # The database host (use 'actix-db' in Docker network or 'localhost' for local development)
DB_PORT=5433                # The database port (default: 5433 for PostgreSQL)

# Optional: SSL/TLS Configuration (for secure connections to database)
DB_SSLMODE=require          # SSL mode: disable, prefer, require, verify-ca, verify-full
DB_SSL_CERT_PATH=./certs/server.crt   # Path to SSL client certificate file (optional)
DB_SSL_KEY_PATH=./certs/server.key    # Path to SSL client private key file (optional)
DB_SSL_ROOT_CERT_PATH=./certs/root.crt  # Path to SSL root certificate file (optional)
